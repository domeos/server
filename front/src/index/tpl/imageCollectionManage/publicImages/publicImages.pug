div(ng-controller="ImageCollectionMangePublicImages")
    loading(ng-if="loading")
    form-container(left-column-width="0")
        form
            form-multiple-inline(content-type="search")
                form-multiple-inline-item
                    help-line
                        icon-info
                        | DomeOS官方仓库中镜像信息
                form-multiple-inline-item
                    form-search-box-with-count(
                        text-prefix="共"
                        text-suffix="条镜像信息"
                        ng-model="imageInfo.searchText"
                        total="{{ imageInfo.imageList.length }}"
                        match="{{ imageInfo.filteredImageList.length }}"
                        on-change="filter()"
                    )
            image-list(image-list="imageInfo.filteredImageList")
